<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalTrackerAI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_purple</item>
        <item name="colorPrimaryVariant">@color/deep_purple_darker</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/darker_gray</item>
        <item name="colorOnSecondary">@color/dark_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="buttonstyle">
        <item name="android:backgroundTint">@color/vibrant_yellow</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>
</resources>